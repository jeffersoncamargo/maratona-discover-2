<%- include('parts/header', {title: "Editar Job", body_id: 'job-edit', css: 'job'}) %>

<header class="page-header inner">
  <div class="container animate-up">
    <a href="/" class="back">
      <img src="/images/back.svg" alt="" />
    </a>
    <h1>Editar Job</h1>
  </div>
</header>

<div class="container flex animate-up delay-2">
    <form id="form-job">
      <fieldset>
        <legend>Dados do Job</legend>
        <div class="separator light"></div>

        <div class="input-wrapper">
          <label for="name">Nome do Job</label>
          <input 
            type="text" 
            id="name" 
            name="name"
            value="Pizzaria Guloso"
          />
        </div>

        <div class="input-group">
          <div class="input-wrapper">
            <label for="daily-hours">Quantas horas <br/>
              por dia vai dedicar ao job?</label>
            <input 
              type="number"
              step="0.1" 
              id="daily-hours" 
              name="daily-hours"
              value="2"/>
          </div>

          <div class="input-wrapper">
            <label for="total-hours">Estimativa de <br/>
              horas para esse Job?</label>
            <input 
              type="number"
              id="total-hours" 
              name="total-hours"
              value="40" />
          </div>
        </div>
      </fieldset>

    </form>
  </main>
  <aside class="card">
    <img src="/images/money-color.svg" alt="Imagem de Dinheiro">
    <p>
      O valor do projeto ficou em <strong>R$ 4576,00</strong>
    </p>
    <div class="button-group">
      <button 
        class="button green" 
        form="form-job" 
        type="submit" 
        title="Salvar Dados">Salvar</button>
      <a 
        href="/" 
        class="button gray open-modal"
        >
        <img 
          src="/images/trash-24.svg" 
          alt="Cancelar cadastro" 
          title="Cancelar cadastro">
      </a>
    </div>
  </aside>
  
</div>
<!-- end container -->

<%- include('parts/footer') %>
 