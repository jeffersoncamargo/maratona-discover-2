<%- include('parts/header', {title: "Home", body_id: 'index', css: 'index'}) %>

<header class="page-header">
  <div class="container">
    <section id="top" class="animate-up">
      <h2 class="sr-only">Homepage</h2>
      <img id="logo" src="/images/logo.svg" alt="Logo" />
      <span id="notification">
        <img src="/images/alert-octagon.svg" alt="Alerta" />
        Você tem 2 horas livres no seu dia
      </span>
      <a href="/profile" id="avatar-profile">
        <p>Jakeliny <span>Ver perfil</span></p>
        <img
          src="https://avatars.githubusercontent.com/u/17316392?s=460&u=6912a91a70bc89745a2079fdcdad3bc3ce370f13&v=4"
        />
      </a>
    </section>

    <div class="separator"></div>

    <section id="summary" class="animate-up delay-1">
      <h2 class="sr-only">Sumário</h2>

      <div class="info">
        <div class="total">
          <strong>12</strong>
          Projetos ao total
        </div>
        <div class="in-progress">
          <strong>7</strong>
          Em andamento
        </div>
        <div class="finished">
          <strong>4</strong>
          Encerrados
        </div>
      </div>
      <a class="button orange" href="/jobs/create">
        <span>
          <img src="/images/plus-24.svg" alt="Novo Job" /> 
        </span>
        Adicionar novo job
      </a>
    </section>
  </div>
</header>

<div class="container">
  <main class="animate-up delay-2">
    <h1 class="sr-only">Trabalhos</h1>

    <div class="cards">
      <div class="card progress" data-id="1">
        <div class="id column">1</div>
        <div class="name column">
          Pizzaria Guloso
        </div>
        <div class="deadline column">
          <span>Prazo</span>
          <p>3 dias para a entrega</p>
        </div>
        <div class="amount column">
          <span>Valor</span>
          <p>R$ 4500,00</p>
        </div>
        <div class="status badge column">
          Em andamento
        </div>
        <div class="actions column flex">
          <p class="sr-only">Ações</p>
          <a 
            href="/jobs/edit/1" 
            class="button white edit" 
            title="Editar Job">
            <img src="/images/edit-24.svg" alt="Editar Job" />
          </a>
          <button class="delete button white" title="Excluir Job">
            <img src="/images/trash-24.svg" alt="Excluir Job" />
          </button>
        </div>
      </div>
      <!-- end card -->

      <div class="card done" data-id="2">
        <div class="id column">2</div>
        <div class="name column">
          OneTwo Project
        </div>
        <div class="deadline column">
          <span>Prazo</span>
          <p>3 dias para a entrega</p>
        </div>
        <div class="amount column">
          <span>Valor</span>
          <p>R$ 4500,00</p>
        </div>
        <div class="status badge column">
          Encerrado
        </div>
        <div class="actions column flex">
          <p class="sr-only">Ações</p>
          <a 
            href="/jobs/edit/2" 
            class="button white edit" 
            title="Editar Job">
            <img src="/images/edit-24.svg" alt="Editar Job" />
          </a>
          <button class="delete button white" title="Excluir Job">
            <img src="/images/trash-24.svg" alt="Excluir Job" />
          </button>
        </div>
      </div>
    </div>
    <!-- end cards -->
  </main>
</div>
<!-- end container -->

<%- include('parts/footer') %>